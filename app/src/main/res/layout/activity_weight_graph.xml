<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:Diet="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="diet.diet.WeightGraphActivity"
    android:background="#f0f0f0">

    <lecho.lib.hellocharts.view.LineChartView
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="WEIGHT"
        android:id="@+id/tv_Weight"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textColor="#0000ff"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="TARGET"
        android:id="@+id/tv_Target"
        android:layout_below="@+id/tv_Weight"
        android:layout_alignParentEnd="true"
        android:textColor="#00ff00"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="ACTUAL"
        android:id="@+id/tv_Actual"
        android:layout_below="@+id/tv_Target"
        android:layout_alignParentEnd="true"
        android:textColor="#ff0000"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Weight"
        android:id="@+id/btn_AddWeight"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/et_Weight"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;weight>"
        android:inputType="numberDecimal"
        android:ems="20"
        android:id="@+id/et_Weight"
        android:background="#ffff00"
        android:width="70dp"
        android:textAlignment="center"
        android:layout_marginLeft="83dp"
        android:height="20dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/tv_Actual"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
